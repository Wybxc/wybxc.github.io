---
import { getTags } from '@/components/posts';
import Layout from '@/layouts/Layout.astro';

const uniqueTags = await getTags();
---

<Layout pageTitle="Tags">
    <hgroup>
        <h1>Tags</h1>
        <p><i>Tags for posts.</i></p>
    </hgroup>
    <p>
        {
            uniqueTags.map((tag) => (
                <a href={`/tags/${tag}`} class="secondary tag">
                    #{tag}
                </a>
            ))
        }
    </p>
</Layout>

<style>
    a.tag {
        text-decoration: dotted underline;
        margin-inline: 0.5em;
    }
</style>
